@using Context;
@using MvcInterface.Models;

@model Pagination<Vehicle>

@{
    ViewBag.Title = "Inicio";
}

<div class="page-header">
    <h2>Inicio</h2>
</div>

<h4>Vehículos en venta</h4>

<div class="control-group">
    <a class="btn btn-success" href="/Home/Add">Nuevo</a>
</div>

<div class="row">
    @foreach (Vehicle itemVehicle in Model.Items)
    {
        <div class="col-xs-12 col-sm-4 col-md-3">
            <div class="thumbnail">
                <img src="@itemVehicle.Url" >
                <div class="caption">
                    <h3>@itemVehicle.Title</h3>
                    <p>@itemVehicle.Description</p>
                </div>
            </div>
        </div>
    }

    <ul class="pagination">
        @foreach (int page in ViewBag.Pages)
        {
            <li>
                <a href="?page=@page">@page</a>
            </li>
        }
    </ul>
</div>

